{
    "name": "f-oris/easy-sdk-httpclient",
    "description": "Easy sdk http-client component.",
    "license": "MIT",
    "authors": [
        {
            "name": "F.oris",
            "email": "us@f-oris.me"
        }
    ],
    "require": {
        "php": ">=5.5",
        "f-oris/easy-httpclient": "^0.5|^1.0"
    },
    "require-dev": {
        "f-oris/easy-sdk-develop": "^0.5|^1.0"
    },
    "autoload": {
        "psr-4": {
            "Foris\\Easy\\Sdk\\HttpClient\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Foris\\Easy\\Sdk\\HttpClient\\Tests\\": "tests/"
        }
    },
    "extra": {
        "easy-sdk": {
            "providers": [
                "Foris\\Easy\\Sdk\\HttpClient\\ServiceProvider"
            ]
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    }
}
